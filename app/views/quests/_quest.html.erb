<div class="quest" id="quest-<%= quest.id %>">
  <span class="title">
  	<%= quest.name %> - 
  	<%= quest.rank %> (next level in blank days)
  </span>
  <span class="timestamp">
  	Quest began on <%= quest.start_day.strftime("%A %B %d, %Y") %>
    <%= link_to "Reset Progress", reset_quest_path(quest), :method => :put, class: "btn btn-sm btn-warning" %>
  </span>
  <div class="progress">
    <div class="progress-bar progress-bar-success" style="width: <%=quest.percent_complete%>%">
      <span><%=quest.days_complete%> days</span>
    </div>
    <div class="progress-bar" style="width: <%=quest.percent_last_record%>%">
      <span><%=quest.days_last_record%> days</span>
    </div>
    <div class="progress-bar progress-bar-info" style="width: <%=quest.percent_left%>%">
      <span><%=quest.days_left%> days</span>
    </div>
  </div>
</div>