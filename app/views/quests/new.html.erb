<h1>Create a new Quest</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@quest) do |f| %>
    	<%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "What is your quest?" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :goal, "What is your time goal in days for this quest? (leave at 0 if no time goal)" %>
      <%= f.number_field :goal, value: 0, min: 0, class: "form-control" %>
      
      <%= f.submit "Create Quest", class: "btn btn-primary" %>
    
    <% end %>
  </div>
</div>